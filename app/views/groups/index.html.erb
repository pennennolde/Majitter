<div class="row">
	<div class="col-xs-0 col-sm-3"></div>
  	<div class="col-xs-12 col-sm-6"><p><%= link_to '[グループをつくる]', new_group_path %></p></div>
  	<div class="col-xs-0 col-sm-3"></div>
</div>


<% unless @member_groups==[] %>

	<div class="row">
		<div class="col-xs-0 col-sm-3"></div>
  		<div class="col-xs-12 col-sm-6"><p>＜所属グループ一覧＞</p></div>
  		<div class="col-xs-0 col-sm-3"></div>
	</div>
	<% @member_groups.each do |g| %>
		<div class="row">
			<div class="col-xs-0 col-sm-3"></div>
  			<div class="col-xs-12 col-sm-6"><%= render partial: 'group', locals: {g: g} %></div>
  			<div class="col-xs-0 col-sm-3"></div>
  		</div>
	<% end %>

<% else %>
	<div class="row">
		<div class="col-xs-0 col-sm-3"></div>
  		<div class="col-xs-12 col-sm-6"><p>所属グループはまだありません。グループを作成して見ましょう！</p></div>
  		<div class="col-xs-0 col-sm-3"></div>
	</div>

<% end %>



