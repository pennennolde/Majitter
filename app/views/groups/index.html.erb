


<div class="row">
	<div class="col-xs-0 col-sm-2"></div>
  	<div class="col-xs-12 col-sm-8">
  		<ul class="nav nav-tabs">
  			<li role="presentation" class="active"><a href="/groups">グループ</a></li>
			<li role="presentation"><a href="/requests">リクエスト</a></li>
 		</ul>
  	</div>
  	<div class="col-xs-0 col-sm-2"></div>
</div>



<div class="row">
	<div class="col-xs-0 col-sm-2"></div>
  <div class="col-xs-12 col-sm-8">
    <button type="button" class="btn btn-default" href="/groups/new">
      <span class="glyphicon glyphicon-plus-sign" aria-hidden="true"></span> グループをつくる
    </button>
  </div>
  <div class="col-xs-0 col-sm-2"></div>
</div>


<% unless @member_groups==[] %>

	<% @member_groups.each do |g| %>
		<div class="row">
			<div class="col-xs-0 col-sm-2"></div>
  		<div class="col-xs-12 col-sm-8"><%= render partial: 'group', locals: {g: g} %></div>
  		<div class="col-xs-0 col-sm-2"></div>
  	</div>
	<% end %>

<% else %>
	<div class="row">
		<div class="col-xs-0 col-sm-2"></div>
  		<div class="col-xs-12 col-sm-8"><p>所属グループはまだありません。グループを作成して見ましょう！</p></div>
  		<div class="col-xs-0 col-sm-2"></div>
	</div>

<% end %>



