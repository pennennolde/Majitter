
<!-- タイムライン -->

<!-- render を使うと each文が省略できる？  @tweets → tweet になるっぽい -->

  <div class="tweet">
  <div class="row">
    <div class="col-xs-0 col-sm-2"></div>
    <div class="col-xs-12 col-sm-8">

      <div class="panel panel-default">
        <div class="panel-body">

          <div class="media">
            <div class="media-left">
              <%= image_tag tweet.user.image_url, class: "media-object" %>
            </div>
            <div class="media-body">
              <h4 class="media-heading">
                <%= tweet.user.account_name %> <small>@<%= tweet.user.user_name %> <%= time_ago_in_words tweet.created_at %></small>
              </h4>
              <%= tweet.text %>
            </div>
          </div>

        </div>
        <div class="panel-footer text-right"><%= link_to tweet.group.group_name, group_path(tweet.group.id) %></div>
      </div>

    </div>
    <div class="col-xs-0 col-sm-2"></div>
  </div>
 </div>
 