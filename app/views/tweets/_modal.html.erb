<div class="modal-dialog">
  <div class="modal-content">
    <%= form_for(@tweet, remote: true) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
        <!-- <h4 class="modal-title" id="exampleModalLabel">New Tweet</h4> -->
        <h4 class="modal-title">New Tweet</h4>
      </div>
      <div class="modal-body">
        <div class="field">
          <div class="form-group">
            <%= f.label '140字以内で' %>
            <%= f.text_area :text, class: "form-control" %><br>
          </div>
            <% if @groups.any? %>
              <!-- ラジオボタン -->
              <%= f.collection_radio_buttons(:group_id, @groups, :id, :group_name) do |b| %>
                <%= b.label {b.radio_button + b.text} %>
              <% end %>
            <% else %>
              <P>まだグループがありません。</P>
              <P>まずはグループを作成しましょう！</P>
            <% end %>
        </div>
      </div>
      <div class="modal-footer">
        <!-- <button type="button" class="btn btn-default" data-dismiss="modal">Close</button> -->
        <%= f.submit "Tweet", :class => "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>