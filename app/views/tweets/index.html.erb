

<% unless logged_in?%>
	<%= render partial: 'layouts/majitter' %>

<% else %>

	<% if @tweets.any? %>
		<!-- <p>タイムライン</p> -->
		<div id="timeline">
			<div class="page">
				<%= render @tweets %> 
			</div>
		</div>
		<div class="row">
    		<div class="col-xs-0 col-sm-2"></div>
    		<div class="col-xs-12 col-sm-8">
     			<div class="center">
        			<%= paginate @tweets, remote: true %>
      			</div>
    		</div>
    		<div class="col-xs-0 col-sm-2"></div>
		</div>

	<% else %>
		<div class="center">
			<p>Majitterへようこそ！</p>
			<p>グループを作成して友だちとのコミュニケーションを楽しみましょう！</p>
		</div>

	<% end %>
	

<% end %>
